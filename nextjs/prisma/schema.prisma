  specialNote     String?         @map("special_note")
  status          OrderItemStatus @default(pending)
  createdAt       DateTime        @default(now()) @map("created_at") @db.Timestamptz

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([tenantId, orderId])
  @@map("order_items")
}

// ============================================
// PAYMENT
// ============================================
model Payment {
  id              String        @id @default(uuid()) @db.Uuid
  tenantId        String        @map("tenant_id") @db.Uuid
  sessionId       String        @map("session_id") @db.Uuid
  method          PaymentMethod @default(cash)
  amountMinor     BigInt        @map("amount_minor")
  currency        String        @default("EUR") @db.VarChar(10)
  tipMinor        BigInt        @default(0) @map("tip_minor")
  discountMinor   BigInt        @default(0) @map("discount_minor")
  discountReason  String?       @map("discount_reason")
  processedById   String?       @map("processed_by_id") @db.Uuid
  status          PaymentStatus @default(pending)
  receiptNumber   String?       @map("receipt_number") @db.VarChar(50)
  createdAt       DateTime      @default(now()) @map("created_at") @db.Timestamptz

  session TableSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([tenantId, sessionId])
  @@map("payments")
}

// ============================================
// FEEDBACK
// ============================================
model Feedback {
  id              String   @id @default(uuid()) @db.Uuid
  tenantId        String   @map("tenant_id") @db.Uuid
  sessionId       String   @map("session_id") @db.Uuid
  customerId      String?  @map("customer_id") @db.Uuid
  overallRating   Int      @map("overall_rating") @db.SmallInt
  foodRating      Int?     @map("food_rating") @db.SmallInt
  serviceRating   Int?     @map("service_rating") @db.SmallInt
  ambianceRating  Int?     @map("ambiance_rating") @db.SmallInt
  valueRating     Int?     @map("value_rating") @db.SmallInt
  comment         String?
  createdAt       DateTime @default(now()) @map("created_at") @db.Timestamptz

  session  TableSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  customer Customer?    @relation(fields: [customerId], references: [id], onDelete: SetNull)

  @@index([tenantId, sessionId])
  @@map("feedback")
}

// ============================================
